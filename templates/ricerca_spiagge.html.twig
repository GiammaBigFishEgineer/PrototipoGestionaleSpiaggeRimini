{% extends 'index.html.twig' %}

{% block content%}
<div class="container">
<h4>Ricerca la tua spiaggia!!</h4>

<form action="/ricerca_spiaggia" method="GET">
<div class="input-group mb-3 mt-3">
    <span class="input-group-text" id="basic-addon1">Nome</span>
    <input type="text" class="form-control" name="nome">
  </div>
<div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">Citt√†</span>
    <input type="text" class="form-control" name="citta">
  </div>
  <button type="submit" class="btn btn-primary">Ricerca</button>
</form>
  
<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
    <div class="list-group">

        {% for spiaggia in spiagge %}
      <a href="/info_spiaggia?id={{spiaggia.id}}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <img src="{{spiaggia.immagini[0]}}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
        <div class="d-flex gap-2 w-100 justify-content-between">
          <div>
            <h6 class="mb-0">{{spiaggia.nome}}</h6>
            <p class="mb-0 opacity-75">{{spiaggia.descrizione}}</p>
          </div>
          <small class="opacity-50 text-nowrap">{{spiaggia.via}}{{spiaggia.citta}}</small>
        </div>
      </a>
      {% endfor %}
      
    </div>
  </div>
</div>
{% endblock %}